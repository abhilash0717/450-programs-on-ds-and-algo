class Solution{
    static int inSequence(int A, int B, int C){
     if (C == 0){
         if(B==A) return 1;
         else return 0;
     }
 
        // Else difference between x and a
        // must be divisible by d.
    if(((B - A) % C == 0 && (B - A) / C >= 0)) return 1;
    else return 0;
    }
}
